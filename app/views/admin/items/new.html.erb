<div class="containe">
  <h1>商品新規登録</h1>
  <div class="row">
    <div class="col-6 offset-3">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <table class="table">
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.number_field :price %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= f.radio_button :is_active, "true" %>販売中</td>
            <td><%= f.radio_button :is_active, "false" %>販売停止中</td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '投稿', class: "btn btn-sm btn-primary btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="offset-3"></div>
  </div>
</div>