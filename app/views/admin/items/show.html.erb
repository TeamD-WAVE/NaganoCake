<div class="container">
  <div class="col-2 offset-1">
    <h4 class="table-active text-center">商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-3 offset-1">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-8">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
          <td><%= @item.add_tax_price.to_s(:dalimited) %> (<%= @item.price.to_s(:dalimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
                <strong class="text-success">販売中</strong>
            <% elsif %>
                <strong class="text-secondary">販売停止中</strong>
            <% end %>
          </td>
        </tr>
      </table>
        <div class="row">
          <div class="col-3 offset-4">
            <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn  btn-primary btn-success" %></td>
          </div>
        </div>
    </div>
  </div>
</div>

