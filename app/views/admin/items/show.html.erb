<div class="container">
  <h1>商品詳細</h1>
  <div class="row">
    <div class="col">
      <%#= image_tag @item.get_image %>
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
    </div>
    <div class="col">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
          <td><%= @item.add_tax_price.to_s(:dalimited) %> (<%= @item.price.to_s(:dalimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
                販売中
            <% elsif %>
                販売停止中
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "Edit", edit_admin_item_path(@item), class: "btn btn-sm btn-primary btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

