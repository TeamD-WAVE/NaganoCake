<div class="container">
  <h1>商品詳細</h1>
  <div class="row">
    <div class="col">
      <%= image_tag @item.get_image %>
    </div>
    <div class="col">
      <table class="table">
        <tr>
          <td>商品名：<%= @item.name %></td>
          <td>商品説明：<%= @item.introduction %></td>
          <td>ジャンル：<%= @item.genre.name %></td>
          <td>税込価格<br>(税抜価格)：<%=  %></td>
          <td>販売ステータス：<%=  %></td>
          <td><%= link_to "Edit", edit_admin_item_path(@item), class: "btn btn-sm btn-primary btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

