<div class="container">
  <h1>商品詳細</h1>
  <div class="row">
    <div class="col">
      <%#= image_tag @item.get_image %>
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
    </div>
    <div class="col">
      <table class="table">
        <tr>
          <td>商品名：<%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明：<%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル：<%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)：<%=  %></td>
        </tr>
        <tr>
          <td>
            販売ステータス
            <% if @item.is_active %>
                販売中
            <% elsif %>
                販売停止中
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "Edit", edit_admin_item_path(@item), class: "btn btn-sm btn-primary btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

