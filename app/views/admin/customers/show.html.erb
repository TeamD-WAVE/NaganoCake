<div class='container'>
<table class="table table-borderless">
 <div class='row'>
  <div class='col-md-12'>
  <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細 </h2>

   <div class='row'>
    <th class='col-md-3 text-left'>会員ID</th>
    <td class='col-md-9 text-left'><%= @customer.id %></td>
   </div>

    <tr class="text-left">
     <th>氏名</th>
     <td><%= @customer.first_name %> <%= @customer.last_name %></td>
    </tr>

    <tr class="text-left">
      <th>フリガナ</th>
      <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
    </tr>

    <tr class="text-left">
     <th>郵便番号</th>
     <td><%= @customer.postal_code %></td>
    </tr>

    <tr class="text-left">
     <th>住所</th>
     <td><%= @customer.address %></td>
    </tr>

    <tr class="text-left">
     <th>電話番号</th>
     <td><%= @customer.telephone_number %></td>
    </tr>

    <tr class="text-left">
     <th>メールアドレス</th>
     <td><%= @customer.email %></td>
    </tr>

    <tr class="text-left">
     <th>会員ステータス</th>
     <td class="<%= @customer.is_active ? 'text-success' : '' %>">
      <%= @customer.is_active ? "有効" : "無効" %>
     </td>
    </tr>

   <tr>
    <td>
      <%= link_to edit_admin_customer_path(@customer), class: "btn btn-success btn-lg" do %>
      <i>編集する</i>
      <% end %>
    </td>

 <%#   <td>
      <%= link_to customer_orders_path(@customer), class: "btn btn-outline-primary btn-block" do %>
 <%#     <i>注文履歴一覧を見る</i>
      <% end %>
 <%#  </td>
  %>
  </tr>
   </div>
  </div>
 </div>
 </table>
</div>
