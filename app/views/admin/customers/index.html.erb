<h2>会員一覧</h2>
 <thead>
   <tr>
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
   </tr>
 </thead>
 <tbody>
  <%= @customers.each do |customer| %>
   <tr>
     <td>
      <%= customer.id %>
     </td>
     <td>
      <%= link_to admin_customer_path(customer.id) do %>
       <%= customer.first_name %><%= customer.last_name %> 
      <% end %>
     </td>
     <td>
      <%= customer.email %> 
     </td>
     <td class="<%= customer.is_active ? 'text-success' : '' %>">
      <%= customer.is_active ? "有効" : "退会" %>
      <%= if customer.is_active %>
       有効
      <% elsif %>
       退会
      <% end 
     </td>
   </tr>
   <% end %>
 </tbody>
 
 <%= paginate @customers %>
 
