<div class="container">
  <h1>ジャンル編集</h1>
  <div class="row">
    <table>
      <%= form_with model: @genre, url:admin_genre_path, method: :patch do |f| %>
      <tr>
        <td>ジャンル名</td>
        <td>
          <%= f.text_field :name %>
        </td>
        <td>
          <%= f.submit "変更を保存", class: "btn btn-sm btn-primary btn-success" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>