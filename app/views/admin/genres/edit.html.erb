<div class="container">
  <div class="row">
    <div class="col-2 offset-1">
      <h4 class="table-active">ジャンル編集</h4>
    </div>
  </div>
  <div class="row">
    <table>
      <%= form_with model: @genre, url:admin_genre_path, method: :patch do |f| %>
      <tr>
        <td>ジャンル名</td>
        <td>
          <%= f.text_field :name %>
        </td>
        <td>
          <%= f.submit "変更を保存", class: "btn btn-sm btn-primary btn-success" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>