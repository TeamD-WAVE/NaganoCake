<div class="container">
  <h1>ジャンル一覧・追加</h1>
  <div class="row">
    <%= form_with model: @genre, url:admin_genres_path, method: :post do |f| %>
      <h4>ジャンル名  <%= f.text_field :name %></h4>
      <%= f.submit "新規登録", class: "btn btn-sm btn-primary btn-success" %>
    <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する",edit_admin_genre_path(genre.id), method: :edit, class: "btn btn-sm btn-primary btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

