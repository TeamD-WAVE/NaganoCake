<div class="container">
  <div class="row">
    <div class="col-3 offset-1">
      <h4 class="table-active text-center">ジャンル一覧・追加</h4>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @genre, url:admin_genres_path, method: :post do |f| %>
      ジャンル名  <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-sm btn-primary btn-success" %>
    <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th class="table-active">ジャンル</th>
          <th class="table-active"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する",edit_admin_genre_path(genre), method: :get, class: "btn btn-sm btn-primary btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
