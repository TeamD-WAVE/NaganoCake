<h2>マイページ</h2>

 <tr>
   <td>登録情報</td>
   <td>
    <div class='row'>
     <% if current_user == @customer %>
     <%= link_to edit_customer_path(@customer), class: "btn btn-outline-success btn-block" do %>
     <i>編集する</i>
     <% end %>
     <% end %>
    </div>
   </td>
 </tr>
 <tr>
  <th>氏名</th>
  <th><%= @customer.last_name %>　<%= @customer.first_name %></th>
 </tr>
 <tr>
  <th>カナ</th>
  <th><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></th>
 </tr>
 <tr>
   <th>郵便番号</th>
   <th><%= @customer.postal_code %></th>
 </tr>
 <tr>
   <th>住所</th>
   <th><%= @customer.address %></th>
 </tr>
 <tr>
   <th>電話番号</th>
   <th><%= @customer.telephone_number %></th>
 </tr>
 <tr>
   <th>メールアドレス</th>
   <th><%= @customer.email %></th>
 </tr>

 <tr>
   <td>配送先</td>
   <td>
    <div class='row'>
     <% if current_user == @customer %>
     <%= link_to mailing_addresses_path(@customer), class: "btn btn-outline-primary btn-block" do %>
     <i>一覧を見る</i>
     <% end %>
     <% end %>
    </div>
   </td>
 </tr>
 <tr>
   <td>注文履歴</td>
   <td>
    <div class='row'>
     <% if current_user == @customer %>
     <%= link_to customer_orders_path(@customer), class: "btn btn-outline-primary btn-block" do %>
     <i>一覧を見る</i>
     <% end %>
     <% end %>
    </div>
   </td>
 </tr>
