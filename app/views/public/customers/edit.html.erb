<div class='container'>
 <div class='row'>
  <div class='col-md-12'>
    <table class="table table-borderless">

  <div class='row'>
     <div class='col-md-1'></div>
   <div class='col-md-3 text-center'>
    <h3 class="table-active">会員情報編集</h3>
   </div>
   <div class='col-md-9'></div>
   </div>

  <div class="mb-4"></div>

     <%= form_with model: @customer, url: information_path do |form| %>
     <%= render "public/shared/error_messages", resource: @customer %>

      <div class='row'>
       <div class='col-3'><h4><%= form.label :first_name, "氏名" %></h4></div>
       <div class='col-3'><h4><%= form.text_field :first_name %></h4></div>
       <div class='col-3'><h4><%= form.text_field :last_name %></h4></div>
       <div class='col-3'></div>
      </div>

      <div class='row'>
       <div class='col-3'><h4><%= form.label :first_name_kana, "フリガナ" %></h4></div>
       <div class='col-3'><h4><%= form.text_field :first_name_kana %></h4></div>
       <div class='col-3'><h4><%= form.text_field :last_name_kana %></h4></div>
       <div class='col-3'></div>
      </div>

     <div class='row'>
      <div class='col-3'><h4><%= form.label :postal_code, "郵便番号" %></h4></div>
      <div class='col-3'><h4><%= form.text_field :postal_code %></h4></div>
      <div class='col-6'></div>
     </div>

     <div class='row'>
      <div class='col-3'><h4><%= form.label :address, "住所" %></h4></div>
      <div class='col-9'><h4><%= form.text_field :address, style: "width: 100%" %></h4></div>
     </div>

     <div class='row'>
      <div class='col-3'><h4><%= form.label :telephone_number, "電話番号" %></h4></div>
      <div class='col-3'><h4><%= form.text_field :telephone_number %></h4></div>
      <div class='col-6'></div>
     </div>

     <div class='row'>
      <div class='col-3'><h4><%= form.label :email, "メールアドレス" %></h4></div>
      <div class='col-3'><h4><%= form.email_field :email, autofocus: true, autocomplete: "email" %></h4></div>
      <div class='col-6'></div>
     </div>
    </table>
　</div>
　</div>

    <div class='row'>
      <div class="col-md-7 text-right">
        <div class="actions">
       　　<%= form.submit "編集内容を保存", class:"btn btn-success btn-lg", style: "width: 50%" %>
     　　</div>
     　</div>


      <div class="col-md-4 text-right">
       <%= link_to unsubscribe_customer_path, class: "btn btn-danger btn-lg", style: "width: 50%" do %>
       <i>退会する</i>
       <% end %>
       </div>
    </div>

  <% end %>
</div>

