   <div>
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:'btn btn-danger' %>
   </div>
   <table class="table">
      <thead>
         <tr class="table-active">
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <!--タグの中にbrタグを入れることで空白のセルを作れる-->
            <th><br></th>
         </tr>
      </thead>
       <% @sum = 0 %>
       <% @cart_item.each do |cart_item| %>
       <tbody>
         <tr>
            <td>
               <%#= image_tag cart_item.item.get_image(70,70) %>
               <%= image_tag cart_item.item, size: "70x70" %>
               <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td>
               <%= form_with model:[cart_item.item,cart_item], url:cart_item_path(cart_item.id) , local:true do |f| %>
                  <%= f.select :amount, *[1..10] %>
                  <%= f.submit "変更" , class: "btn btn-success" %>
               <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除", cart_item_path(cart_item) ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
         </tr>
       </tbody>
         <% @sum += cart_item.subtotal %>
   </table>
<% end %>
<%= link_to "買い物を続ける" , root_path , class: "btn btn-primary" %>
合計金額 <%= @sum %>円

<%= link_to "情報入力に進む" , orders_new_path , class: "btn btn-success" %>
