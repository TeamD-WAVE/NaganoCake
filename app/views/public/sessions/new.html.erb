<div class='container'>

 <div class='row'>
   <div class='col-2 text-center'>
    <h3 class="table-active">ログイン</h3>
   </div>
   <div class='col-10'></div>
 </div>

  <div class="mb-4"></div>

  <div class='row'>
   <div class='col-4 text-center'>
      <h4 class="table-active">会員の方はこちらからログイン</h4>
   </div>
   <div class='col-8'></div>
   </div>

  <div class="mb-4"></div>

     <%= form_with model: @customer, url: customer_session_path do |f| %>
   <div class='row'>
      <div class='col-3'><h4><%= f.label :email, "メールアドレス" %></h4></div>
      <div class='col-6'><h4><%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%" %></h4></div>
      <div class='col-3'></div>
   </div>

    <div class="mb-3"></div>

    <div class='row'>
      <div class='col-3'><h4><%= f.label :password, "パスワード" %></h4></div>
      <div class='col-6'><h4><%= f.password_field :password, autocomplete: "current-password", style: "width: 100%" %></h4></div>
      <div class='col-3'></div>
    </div>

    <div class="mb-4"></div>

   <div class='row'>
    <div class='col-4'></div>
     <div class='col-4'>
      <div class="actions">
       <%= f.submit "ログイン", class: 'btn btn-primary btn-lg', style: "width: 100%" %></div>
      </div>
     <div class='col-4'></div>
       <% end %>
  </div>

    <div class="mb-5"></div>

   <div class='row'>
   <div class='col-4 text-center'>
      <h4 class="table-active">会員登録がお済みでない方</h4>
   </div>
   <div class='col-8'></div>
   </div>

    <div class="mb-4"></div>

    <div class='row'>
     <div class='col-2'></div>
     <div class='col-5 text-center'>
      <h4><%= render "public/shared/links" %>から新規登録を行ってください。</h4>
     </div>
     <div class='col-5'></div>
</div>
